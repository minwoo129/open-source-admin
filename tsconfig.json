{
  "compilerOptions": {
    "removeComments": true,
    "strict": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "esModuleInterop": true
  },
  "include": ["apps/**/*", "packages/**/*"],
  "references": [
    {
      "path": "./apps/main-app"
    }
  ],
  "exclude": [
    "node_modules",
    "**/build",
    "**/dist",
    "**/__tests__",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.stories.tsx",
    "**/.storybook",
    "coverage",
    "storybook-static",
    "public",
    "**/eslint.config.js",
    "**/eslint.config.mjs",
    "**/jest.config.js"
  ]
}
